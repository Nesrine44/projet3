<style>
 form{
max-width:400px;
max-height: 200px;
margin: 50px auto;
padding:10px;

 }
body{
background-color: #eee;
 }
 
 input{
     display: block;
    
    
margin-bottom:20px;
    
 }



    
</style>
    </head>
    <body>
     

        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </body>
</html>
